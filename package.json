{
  "name": "rolldown",
  "version": "1.0.0",
  "description": "Rollup in Rust",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "crates/rolldown_node_binding",
    "packages/*",
    "packages/core/tests"
  ],
  "scripts": {
    "build": "run-s build:ts build:packages",
    "build:ts": "tsc -b tsconfig.project.json",
    "build:binding": "yarn workspace @rolldown/node-binding run build",
    "build:binding:release": "yarn workspace @rolldown/node-binding run build:release",
    "build:packages": "yarn workspaces foreach --topological --exclude rolldown run build",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:check": "run-p format:prettier:check format:toml:check",
    "format:prettier:check": "prettier . -c",
    "format:toml:check": "taplo fmt --check",
    "format:rs": "cargo fmt",
    "format:toml": "taplo format",
    "test": "yarn workspaces foreach run test",
    "test:core": "yarn workspace @rolldown/core-tests test"
  },
  "license": "MIT",
  "devDependencies": {
    "@taplo/cli": "^0.5.2",
    "husky": "^8.0.3",
    "lerna": "^6.5.1",
    "lint-staged": "^13.1.2",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "rollup": "^3.17.3",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "lint-staged": {
    "*.@(js||ts|json|md|yml|yaml)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  },
  "packageManager": "yarn@3.4.1"
}
