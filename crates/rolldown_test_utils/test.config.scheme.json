{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TestConfig",
  "type": "object",
  "properties": {
    "expectError": {
      "default": false,
      "type": "boolean"
    },
    "expectedError": {
      "anyOf": [
        {
          "$ref": "#/definitions/ExpectedError"
        },
        {
          "type": "null"
        }
      ]
    },
    "input": {
      "$ref": "#/definitions/InputOptions"
    },
    "output": {
      "$ref": "#/definitions/OutputOptions"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "Builtins": {
      "type": "object",
      "properties": {
        "tsconfig": {
          "$ref": "#/definitions/TsConfig"
        }
      },
      "additionalProperties": false
    },
    "ExpectedError": {
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "InputItem": {
      "type": "object",
      "required": [
        "import",
        "name"
      ],
      "properties": {
        "import": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "InputOptions": {
      "type": "object",
      "properties": {
        "builtins": {
          "$ref": "#/definitions/Builtins"
        },
        "external": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "input": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/InputItem"
          }
        },
        "shimMissingExports": {
          "default": false,
          "type": "boolean"
        },
        "treeshake": {
          "default": true,
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "OutputOptions": {
      "type": "object",
      "properties": {
        "exportMode": {
          "default": "auto",
          "type": "string"
        },
        "format": {
          "default": "esm",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "TsConfig": {
      "type": "object",
      "properties": {
        "useDefineForClassFields": {
          "default": false,
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}